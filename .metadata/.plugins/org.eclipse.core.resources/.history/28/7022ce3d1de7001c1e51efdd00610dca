package br.com.codeforcadastro.dbinitialization.dto;

import java.io.Serializable;
import java.util.HashSet;
import java.util.List;
import java.util.Set;

import br.com.codeforcadastro.dbinitialization.entities.Aluno;
import br.com.codeforcadastro.dbinitialization.entities.Curso;

public class CursoDTO implements Serializable {
	private static final long serialVersionUID = 1L;

	private Long id;

	private String name;

	private int duration;

	private Set<Aluno> alunos = new HashSet<>();

	public CursoDTO() {
	}

	public CursoDTO(Long id, String name, int duration, Set<Aluno> alunos) {
		super();
		this.id = id;
		this.name = name;
		this.duration = duration;
		this.alunos = alunos;
	}

	public CursoDTO(Curso entity) {
		id = entity.getId();
		name = entity.getName();
		duration = entity.getDuration();
		alunos = entity.getAlunos();

	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getDuration() {
		return duration;
	}

	public void setDuration(int duration) {
		this.duration = duration;
	}

	public List<Aluno> getListAlunos() {
		return listAlunos;
	}

	public void setListAlunos(List<Aluno> listAlunos) {
		this.listAlunos = listAlunos;
	}

	public static long getSerialversionuid() {
		return serialVersionUID;
	}

	public Long getId() {
		return id;
	}

}
