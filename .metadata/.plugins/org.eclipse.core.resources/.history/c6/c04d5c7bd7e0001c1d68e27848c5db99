package br.com.codeforcadastro.dbinitialization.dto;

import java.io.Serializable;
import java.time.Instant;

import javax.persistence.CascadeType;
import javax.persistence.JoinColumn;
import javax.persistence.OneToOne;

import br.com.codeforcadastro.dbinitialization.entities.Aluno;
import br.com.codeforcadastro.dbinitialization.entities.Curso;
import br.com.codeforcadastro.dbinitialization.entities.Escola;
import br.com.codeforcadastro.dbinitialization.entities.Matricula;

public class MatriculaDTO implements Serializable {
	private static final long serialVersionUID = 1L;

	private Long id;

	private Instant moment;

	private Aluno aluno;

	private Escola escola;

	private Curso curso;

	public MatriculaDTO() {
	}

	public MatriculaDTO(Long id, Instant moment, Aluno aluno, Escola escola, Curso curso) {
		this.id = id;
		this.moment = moment;
		this.aluno = aluno;
		this.escola = escola;
		this.curso = curso;
	}

	public MatriculaDTO(Matricula entity) {
		this.id = entity.getId();
		this.moment = entity.getMoment();
		this.aluno = entity.getAluno();
		this.escola = entity.getEscola();
		this.curso = entity.getCurso();
	}

}
