package br.com.codeforcadastro.dbinitialization.service;

import java.io.Serializable;
import java.time.Instant;
import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import br.com.codeforcadastro.dbinitialization.dto.MatriculaDTO;
import br.com.codeforcadastro.dbinitialization.entities.Aluno;
import br.com.codeforcadastro.dbinitialization.entities.Curso;
import br.com.codeforcadastro.dbinitialization.entities.Escola;
import br.com.codeforcadastro.dbinitialization.entities.Matricula;
import br.com.codeforcadastro.dbinitialization.repository.MatriculaRepository;

@Service
public class MatriculaService implements Serializable {
	private static final long serialVersionUID = -2098978314580275543L;

	@Autowired
	public MatriculaRepository matriculaRepository;

	public List<MatriculaDTO> findAll() {
		List<Matricula> list = matriculaRepository.findAll();
		return list.stream().map(x -> new MatriculaDTO(x)).collect(Collectors.toList());
	}

	public MatriculaDTO insert(MatriculaDTO dto) {

		Aluno aluno = new Aluno();
		aluno.setCpf(aluno.getCpf());
		aluno.setAddress(aluno.getAddress());
		aluno.setName(aluno.getName());

		Escola escola = new Escola();
		escola.setAddress(escola.getAddress());
		escola.setCnpj(escola.getAddress());
		escola.setName(escola.getName());

		Curso curso = new Curso();
		curso.setNome(curso.getName());
		curso.setDuracao(curso.getDuration());

		Matricula matricula = new Matricula();
		matricula.setMoment(Instant.now());
		matricula.setAluno(matricula.getAluno());
		matricula.setCurso(matricula.getCurso());
		matricula.setEscola(matricula.getEscola());

		matricula = matriculaRepository.save(matricula);
		return dto;

	}

}
